<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:statusBarColor">@color/maincolor</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="Main" parent="AppTheme">
        <item name="android:statusBarColor">@color/maincolor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Login" parent="AppTheme">
        <item name="android:statusBarColor">@color/maincolor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="record" parent="AppTheme">
        <item name="android:statusBarColor">@color/recordcolor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="CustomTextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanummyeongjoextrabold</item>
    </style>




</resources>
