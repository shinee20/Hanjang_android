<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="400dp"
            android:layout_height="560dp"
            android:background="#282c4f"
            android:id="@+id/voca_rectangle"
            />
        <TextView
            android:layout_marginLeft="19.3dp"
            android:layout_marginTop="24.5dp"
            android:id="@+id/voca_title"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="온새미로"
            android:textSize="30sp"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/voca_mean_first"
            android:layout_marginTop="24.5dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/voca_title"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/binggraii"
            tools:text="언
제
나
변
함
없
이
자
연
그
대
로"
            />
        <TextView
            android:id="@+id/voca_mean_second"
            android:layout_marginTop="24.5dp"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@id/voca_mean_first"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/binggraii"
            tools:text="가
르
거
나
쪼
개
지
않
고."
            />
        <TextView
            android:id="@+id/voca_mean_third"
            android:layout_marginTop="24.5dp"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@id/voca_mean_second"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/binggraii"
            tools:text="가
르
거
나
쪼
개
지
않
고."

            android:visibility="invisible"/>

        <TextView
            android:id="@+id/voca_mean_forth"
            android:layout_marginTop="24.5dp"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@id/voca_mean_third"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/binggraii"
            tools:text="가
르
거
나
쪼
개
지
않
고."

            android:visibility="invisible"/>
        <TextView
            android:id="@+id/voca_order"
            android:layout_toRightOf="@id/voca_mean_forth"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="24.8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#d8d8d8"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="2.5sp"
            android:gravity="center_horizontal"
            android:text="01"
            />
        <TextView
            android:id="@+id/voca_date"
            android:layout_below="@id/voca_order"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="450dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#d8d8d8"
            android:text="2018. 06. 25"
            />

    </RelativeLayout>

</LinearLayout>