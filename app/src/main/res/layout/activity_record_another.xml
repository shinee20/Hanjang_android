<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/record_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="34.8dp"
        android:layout_marginLeft="15dp"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_back_b"
        android:id="@+id/back_btn"
        />
    <ImageView
        android:id="@+id/change_view_layout_btn"
        android:layout_marginTop="34.8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_view_1_b"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/actionBtn1"
        android:clickable="true"
        android:layout_marginBottom="13.5dp"
        android:layout_marginRight="12.3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="275dp"
        android:layout_alignParentBottom="true"
        app:backgroundTint="#ccffffff"
        android:src="@drawable/group_5" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_to_voca"
        android:clickable="true"
        android:layout_marginBottom="13.5dp"
        android:layout_toRightOf="@id/actionBtn1"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="#ccffffff"
        android:src="@drawable/group_7" />
</RelativeLayout>