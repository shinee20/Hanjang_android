<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="-3dp"
        card_view:contentPaddingBottom="-3dp"
        card_view:contentPaddingTop="-3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/record_another_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.5dp"
                android:layout_marginTop="67.3dp"
                android:textColor="#ffffff"
                android:textSize="22sp"
                tools:text="그느르다" />

            <TextView
                android:id="@+id/record_another_mean"
                android:layout_width="105.3dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/record_another_title"
                android:layout_marginLeft="14.8dp"
                android:layout_marginTop="17.8dp"
                android:lineSpacingExtra="7sp"
                android:textColor="#ffffff"
                android:textSize="15sp"
                tools:text="오늘의 일기, 정동 길 회화나무는 몇 년을 지나도 온새미로 고고하다. 너도 여전히 온새미로 보기 좋구나나도 여전히 온새미로 보기 좋다네." />

            <TextView
                android:id="@+id/record_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/record_another_mean"
                android:layout_marginLeft="14.8dp"
                android:layout_marginTop="59dp"
                android:text="01"
                android:textColor="#ffffff"
                android:textSize="7.5sp"

                />

            <TextView
                android:id="@+id/record_another_dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/record_another_mean"
                android:layout_marginLeft="4.8dp"
                android:layout_marginTop="59dp"
                android:layout_toRightOf="@id/record_number"
                android:text="-"
                android:textColor="#ffffff"

                />

            <TextView
                android:id="@+id/record_another_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/record_another_mean"
                android:layout_marginLeft="5.8dp"
                android:layout_marginTop="59dp"
                android:layout_toRightOf="@id/record_another_dash"
                android:text="2018. 06. 25"
                android:textColor="#ffffff"
                android:textSize="7.5sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>