<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/setting_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_6"
            android:layout_gravity="center"
            android:layout_marginLeft="12.3dp"
            android:layout_marginTop="14.5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/binggraeiibold"
            android:letterSpacing="-0.02"
            android:text="설정"
            android:textSize="20sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/recordcolor7" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_profile_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile_img"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="23.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20shinee@gmail.com"
            android:layout_marginLeft="14.5dp"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/setting_id"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logout"
            android:layout_marginLeft="5.3dp"
            android:layout_gravity="center"
            android:id="@+id/logout_btn"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/recordcolor7" />
    <ListView
        android:id="@+id/setting_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>