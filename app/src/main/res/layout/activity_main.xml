<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg_1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginLeft="14.3dp"
                android:layout_marginTop="27dp"
                android:src="@drawable/icon_gnb" />

            <TextView
                android:id="@+id/main_action_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="26.3dp"
                android:textColor="#2f2f2f"
                android:textSize="15sp"
                tools:text="단어장" />

            <ImageView
                android:id="@+id/voca_regist_btn"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/star" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13.5dp">
        <LinearLayout
            android:id="@+id/word_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/today_word_title"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="43.8dp"
                android:layout_marginTop="87.5dp"
                android:textColor="#000000"
                android:textSize="30sp"
                tools:text="온새미로" />

            <TextView
                android:id="@+id/today_word_mean1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48.7dp"
                android:layout_marginTop="86.8dp"
                android:fontFamily="@font/binggraii"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="언
제
나

변
함
없
이


자
연

그
대
로" />

            <TextView
                android:id="@+id/today_word_mean2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.7dp"
                android:layout_marginTop="86.8dp"
                android:fontFamily="@font/binggraii"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="가
르
거
나

쪼
개
지

않
고" />

            <TextView
                android:id="@+id/today_word_mean3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.7dp"
                android:layout_marginTop="86.8dp"
                android:fontFamily="@font/binggraii"
                android:textColor="#000000"
                android:textSize="20sp"
                android:visibility="invisible"
                tools:text="가
르
거
나

쪼
개
지

않
고" />
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_to_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="275dp"
            android:layout_marginRight="12.3dp"
            android:clickable="true"
            android:src="@drawable/group_5"
            app:backgroundTint="#ccffffff" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_to_voca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/fab_to_write"
            android:clickable="true"
            android:src="@drawable/group_7"
            app:backgroundTint="#ccffffff" />
    </RelativeLayout>
</LinearLayout>

<include layout="@layout/activity_navigation_drawer" />

    </android.support.v4.widget.DrawerLayout>

