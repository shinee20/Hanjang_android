<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25.8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="37.8dp"
            android:layout_height="79.3dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo" />

        <ImageButton
            android:id="@+id/facebook_login_btn"
            android:layout_width="218.5dp"
            android:layout_height="36.3dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:src="@drawable/facebook_login_btn" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_btn_fake"
            android:layout_width="218.5dp"
            android:layout_height="36.3dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/google_login_btn"
            android:layout_width="218.5dp"
            android:layout_height="36.3dp"
            android:layout_gravity="center"
            android:layout_marginTop="9.8dp"
            android:onClick="onClick"
            android:src="@drawable/google_login_btn" />

        <TextView
            android:id="@+id/go_without_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="29.3dp"
            android:letterSpacing="0.023"
            android:text="로그인 없이 사용하기"
            android:textColor="#c4c4c4"
            android:textSize="10.5sp"
            android:textStyle="bold"

            />
    </LinearLayout>
</LinearLayout>