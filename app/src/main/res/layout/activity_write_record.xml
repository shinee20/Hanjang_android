<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_write_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#52bdbb"
    android:orientation="vertical">

    <EditText
        android:id="@+id/record_txt"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.5dp"
        android:layout_marginTop="64.5dp"
        android:background="@null"
        android:fontFamily="@font/nanummyeongjobold"
        android:hint="순 우리말로 오늘의 한장을 채워보세요.
(100자 내외)"
        android:lineSpacingExtra="4sp"
        android:textColor="#ffffff"
        android:textSize="13.5sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28.5dp"
       >
        <TextView
            android:id="@+id/oval_selected_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_selected_color"
            android:layout_marginLeft="20dp"
            android:text="가"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <TextView
            android:id="@+id/oval_color_1"
            android:layout_toRightOf="@id/oval_selected_color"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/oval_color_1"
            android:id="@+id/oval_color_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:visibility="invisible"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/oval_color_2"
            android:id="@+id/oval_color_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:visibility="invisible"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/oval_color_3"
            android:id="@+id/oval_color_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:visibility="invisible"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/oval_color_4"
            android:id="@+id/oval_color_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:visibility="invisible"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/oval_color_5"
            android:id="@+id/oval_color_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:visibility="invisible"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/oval_color_6"
            android:id="@+id/oval_color_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/text_size_adj"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group_15"
            android:layout_toRightOf="@id/oval_selected_color"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16.8dp"
            android:background="@android:color/transparent"/>

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_size_adj"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10.3dp"
            android:max="100"
            android:progress="5"
            android:thumb="@drawable/shape"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/letterspacing_adj"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group_14"
            android:layout_toRightOf="@id/text_size_adj"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16.8dp"
            android:background="@android:color/transparent"/>
        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/letterspacing_adj"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10.3dp"
            android:max="100"
            android:progress="5"
            android:thumb="@drawable/shape"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/linespacing_adj"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group_12"
            android:layout_toRightOf="@id/letterspacing_adj"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16.8dp"
            android:background="@android:color/transparent"/>
        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/linespacing_adj"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10.3dp"
            android:max="100"
            android:progress="5"
            android:thumb="@drawable/shape"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/backgroundcolor_adj_white"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group_11"
            android:layout_toRightOf="@id/linespacing_adj"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16.8dp"
            android:background="@android:color/transparent"/>
        <ImageView
            android:id="@+id/backgroundcolor_adj_black"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group_3"
            android:layout_toRightOf="@id/backgroundcolor_adj_white"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16.8dp"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
</LinearLayout>